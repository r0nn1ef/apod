/**
 * Implements hook_theme().
 */
function apod_theme($existing, $type, $theme, $path) {
  return array(
    'apod_image' => array(
      'template' => 'apod_image',
      'variables' => array(
        'item' => array(),
      ),
    ),
    'apod_video' => array(
      'template' => 'apod_video',
      'variables' => array(
        'item' => array(),
      ),
    ),
  );
}

/**
 * Implements hook_preprocess_html().
 */
function apod_preprocess_html(&$variables) {
  $variables['attributes']['class'][] = 'page-astronomy-picture-of-the-day';
}