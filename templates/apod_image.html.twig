{% if item.media_type == 'video' %}
    <h4><a href="/astronomy-picture-of-the-day/{{ item.date|date('Y-m-d') }}">{{ item.title }}</a></h4>
    <iframe class="apod-video" width="200" height="150" src="{{ item.url }}" frameborder="0" allowfullscreen></iframe>
{% else %}
    <h4><a href="/astronomy-picture-of-the-day/{{ item.date|date('Y-m-d') }}">{{ item.title }}</a></h4>
<a href="/astronomy-picture-of-the-day/{{ item.date|date('Y-m-d') }}"><img src="{{ item.hdurl|default(item.url) }}" class="apod-block-image" alt="{{ item.title }}" style="width:100%;height:auto" /></a>
{% endif %}
{{ item }}